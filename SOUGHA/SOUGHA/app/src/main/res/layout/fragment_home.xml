<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"

    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        android:background="@color/white"
        tools:context=".view.HomeFragment">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/imgTransaction"
            android:layout_width="39dp"
            android:layout_height="40dp"
            android:layout_marginStart="76dp"
            android:layout_marginTop="39dp"
            android:src="@drawable/ic_transaction"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/txtTranaction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/josefinsans_regular"
            android:text="@string/transaction"
            android:textColor="@color/darkGrey"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="@id/imgTransaction"
            app:layout_constraintStart_toStartOf="@id/imgTransaction"
            app:layout_constraintTop_toBottomOf="@id/imgTransaction" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/imgClaims"
            android:layout_width="39dp"
            android:layout_height="40dp"
            android:layout_marginStart="48dp"
            android:layout_marginTop="39dp"
            android:src="@drawable/ic_claims"
            app:layout_constraintStart_toEndOf="@id/imgTransaction"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/txtClaims"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/josefinsans_regular"
            android:text="@string/claims"
            android:textColor="@color/darkGrey"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="@id/imgClaims"
            app:layout_constraintStart_toStartOf="@id/imgClaims"
            app:layout_constraintTop_toBottomOf="@id/imgClaims" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/imgCalculator"
            android:layout_width="39dp"
            android:layout_height="40dp"
            android:layout_marginStart="48dp"
            android:layout_marginTop="39dp"
            android:src="@drawable/ic_calculator"
            app:layout_constraintStart_toEndOf="@id/imgClaims"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/imgnotifcation"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginEnd="20dp"
            android:src="@drawable/baseline_notifications_24"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/imgCalculator" />

        <com.google.android.material.imageview.ShapeableImageView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/notificationdrawable"
            app:layout_constraintEnd_toEndOf="@id/imgnotifcation"
            app:layout_constraintTop_toTopOf="@id/imgnotifcation" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/txtCalculators"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/josefinsans_regular"
            android:text="@string/calculator"
            android:textColor="@color/darkGrey"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="@id/imgCalculator"
            app:layout_constraintStart_toStartOf="@id/imgCalculator"
            app:layout_constraintTop_toBottomOf="@id/imgCalculator" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/txtMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="18dp"
            android:fontFamily="@font/josefinsans_regular"
            android:text="@string/hello_nishita"
            android:textColor="@color/darkGrey"
            android:textSize="28sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txtTranaction" />


        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cvSoughCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="5dp"
            android:background="#757575"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txtMessage">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#514F4C">
                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/txtBalance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/josefinsans_regular"
                    android:text="@string/rewards_balance"
                    android:textColor="#DCDCDC"
                    android:textSize="18sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/imgSoughaQR"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:src="@drawable/soughlogo"
                    android:tint="@color/white"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/txtBalance2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="@string/_129_876"
                    android:textColor="#F8F8F8"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="@id/txtBalance"

                    app:layout_constraintTop_toBottomOf="@id/txtBalance" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/txtArabicDiahramBalnce"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="3dp"
                    android:layout_marginTop="3dp"
                    android:text="@string/aed_1295"
                    android:textColor="#DCDCDC"
                    android:textSize="18sp"
                    app:layout_constraintStart_toStartOf="@id/txtBalance2"
                    app:layout_constraintTop_toBottomOf="@id/txtBalance2" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/txtPlatinum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="80dp"
                    android:fontFamily="@font/josefinsans_regular"
                    android:text="@string/platinum"
                    android:textColor="#DCDCDC"
                    android:textSize="18sp"
                    app:layout_constraintStart_toStartOf="@id/txtArabicDiahramBalnce"
                    app:layout_constraintTop_toBottomOf="@id/txtBalance2" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/txtCardno1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    android:text="@string/_1_3_5_7"

                    android:textColor="#DCDCDC"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="@id/txtPlatinum"
                    app:layout_constraintTop_toBottomOf="@id/txtPlatinum" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/txtCardno2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="35dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="10dp"
                    android:text="@string/_0_0_3_4"
                    android:textColor="#DCDCDC"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@id/txtCardno1"
                    app:layout_constraintTop_toBottomOf="@id/txtPlatinum" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/txtCardno3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="35dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="10dp"
                    android:text="@string/_9_8_3_4"
                    android:textColor="#DCDCDC"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@id/txtCardno2"
                    app:layout_constraintTop_toBottomOf="@id/txtPlatinum" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/txtCardno4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="35dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="10dp"
                    android:text="@string/_2_3_6_7"
                    android:textColor="#DCDCDC"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@id/txtCardno3"
                    app:layout_constraintTop_toBottomOf="@id/txtPlatinum" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/imgBarCode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
           android:layout_marginStart="30dp"
            android:layout_marginEnd="30sp"
            android:src="@drawable/ic_barcode"
            app:layout_constraintTop_toBottomOf="@id/cvSoughCard" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnAddWallet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="50dp"
            android:layout_marginTop="9dp"
            android:backgroundTint="@color/darkblack"
            android:fontFamily="@font/josefinsans_regular"
            android:paddingTop="16dp"
            android:paddingEnd="50dp"
            android:paddingStart="5dp"
            android:paddingBottom="13dp"
            android:text="@string/add_to_apple_wallet"
            android:textSize="16sp"
            app:cornerRadius="12dp"
            app:icon="@drawable/baseline_wallet_24"
            app:iconGravity="textStart"
            app:iconSize="30dp"
            app:layout_constraintStart_toStartOf="@id/imgBarCode"
            app:layout_constraintTop_toBottomOf="@id/imgBarCode" />

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/viewPager"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/viewpagerimgbg"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btnAddWallet" />

        <com.tbuonomo.viewpagerdotsindicator.WormDotsIndicator
            android:id="@+id/dotsIndicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="20dp"
            app:dotsClickable="true"
            app:dotsColor="@color/white"
            app:dotsSize="5dp"
            app:dotsStrokeColor="#E1E1E1"
            app:dotsStrokeWidth="1dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/viewPager" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/txtPartnerOffer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="24dp"
            android:fontFamily="@font/josefinsans_regular"
            android:text="@string/partner_offers"
            android:textColor="@color/darkGrey"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/dotsIndicator" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvPartner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="30dp"
            android:orientation="horizontal"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txtPartnerOffer"
            tools:listitem="@layout/rv_partneroffers" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/txtRecommend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="24dp"
            android:fontFamily="@font/josefinsans_regular"
            android:text="@string/recommended_for_you"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/rvPartner" />
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvRecommendation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="30dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:orientation="horizontal"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txtRecommend"
            tools:listitem="@layout/rv_recommendation" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>