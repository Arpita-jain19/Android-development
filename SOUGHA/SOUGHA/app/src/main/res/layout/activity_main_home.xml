    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/fcvHomeActivity"
        android:name="androidx.navigation.fragment.NavHostFragment"
        defaultNavHost="true"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/btmNav2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:navGraph="@navigation/nav_home" />
    <com.tenclouds.fluidbottomnavigation.FluidBottomNavigation
        android:id="@+id/btmNav2"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        app:layout_constraintTop_toBottomOf="@id/fcvHomeActivity"
        app:layout_constraintBottom_toBottomOf="parent"
        app:menu="@menu/bottom_navigation"
        app:textColor="@color/DarkSilver"
        app:iconColor="@color/DarkSilver"
        app:iconSelectedColor="@color/white"
        app:accentColor="@color/brown"
        app:backColor="@color/foggyGrey"
        style="@style/BottomNavigationTextAppearance"/>
